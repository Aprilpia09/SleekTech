<section class="cart-section">
  <div class="cart-container">
    <h2>Your Shopping Cart</h2>
    
    {% if cart.item_count == 0 %}
      <p>Your cart is currently empty.</p>
      <a href="/" class="btn">Continue Shopping</a>
    {% else %}
      <div class="cart-items">
        {% for item in cart.items %}
          <div class="cart-item">
            <img src="{{ item.image | img_url: 'medium' }}" alt="{{ item.product.title }}">
            <div class="cart-item-details">
              <p class="cart-item-title">{{ item.product.title }}</p>
              <p class="cart-item-quantity">Quantity: {{ item.quantity }}</p>
              <p class="cart-item-price">{{ item.line_price | money }}</p>
            </div>
            <a href="{{ routes.cart_remove_url }}&line={{ forloop.index }}" class="cart-item-remove">Remove</a>
          </div>
        {% endfor %}
      </div>

      <div class="cart-summary">
        <p>Total: {{ cart.total_price | money }}</p>
        <a href="{{ routes.checkout_url }}" class="btn checkout-btn">Proceed to Checkout</a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  /* Cart Section */
  .cart-section {
    background-color: #ffffff; /* Clean white background */
    padding: 40px 20px;
    font-family: Arial, sans-serif; /* Clear, readable font */
    color: #333;
  }

  .cart-container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .cart-container h2 {
    font-size: 28px;
    font-weight: bold;
    color: #333;
  }

  .cart-items {
    margin-top: 20px;
  }

  .cart-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 15px 0;
    padding: 15px;
    border: 1px solid #ddd;
    border-radius: 5px;
    background-color: #f9f9f9;
  }

  .cart-item img {
    max-width: 80px;
    margin-right: 15px;
  }

  .cart-item-details {
    flex-grow: 1;
    text-align: left;
  }

  .cart-item-title {
    font-size: 16px;
    font-weight: bold;
    color: #333;
  }

  .cart-item-quantity, .cart-item-price {
    font-size: 14px;
    color: #666;
  }

  .cart-item-remove {
    font-size: 14px;
    color: #e74c3c; /* Accent red for remove link */
    text-decoration: none;
  }

  .cart-item-remove:hover {
    text-decoration: underline;
  }

  .cart-summary {
    margin-top: 30px;
    font-size: 18px;
  }

  .btn {
    display: inline-block;
    background-color: #333; /* Dark background for buttons */
    color: #fff;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .btn:hover {
    background-color: #e74c3c; /* Accent red on hover */
  }

  .checkout-btn {
    margin-top: 20px;
  }

  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .cart-item {
      flex-direction: column;
      text-align: left;
    }

    .cart-item img {
      margin-bottom: 15px;
    }
  }
</style>
