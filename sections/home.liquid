<!-- Featured Products Section -->
<section class="featured-products">
  <div class="section-header">
    <h2>Featured Products</h2>
    <p>Explore our best-selling products</p>
  </div>
  
  <div class="product-cards">
    {% for product in collections.featured.products %}
      <div class="product-card">
        <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
        <p>{{ product.title }}</p>
        <p>{{ product.price | money }}</p>
        <a href="{{ product.url }}" class="btn">View Product</a>
      </div>
    {% endfor %}
  </div>
</section>

<style>
  /* Featured Products Section Styling */
  .featured-products {
    padding: 50px 20px;
    background-color: #f9f9f9;
  }

  .section-header h2 {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .section-header p {
    font-size: 1.1rem;
    margin-top: 10px;
  }

  .product-cards {
    display: flex;
    gap: 30px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .product-card {
    background-color: white;
    width: 250px;
    text-align: center;
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: box-shadow 0.3s ease;
  }

  .product-card img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .product-card p {
    font-size: 1rem;
    margin: 10px 0;
  }

  .product-card .btn {
    padding: 10px 20px;
    background: #ff3333;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    margin-top: 10px;
  }

  .product-card:hover {
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .product-card .btn:hover {
    background: #e60000;
  }
</style>
