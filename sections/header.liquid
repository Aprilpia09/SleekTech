<!-- Skip to Content Link -->
<a href="#main-content" class="skip-to-content">Skip to content</a>

<header>
  <!-- Your logo and other header content -->
  <div class="header-logo">
    <a href="/" aria-label="Go to homepage">SleekTech</a>
  </div>

  <!-- Dynamic Navigation Menu -->
  <nav>
    <ul>
      {% for link in linklists.main-menu.links %}
        <li><a href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}</a></li>
      {% endfor %}
    </ul>
  </nav>
</header>

<!-- Main content section -->
<main id="main-content">
  <!-- All your content will go here, for example, homepage, product pages, etc. -->
</main>

<style>
  /* Skip to Content Styles */
  .skip-to-content {
    position: absolute;
    top: -40px;
    left: 10px;
    background-color: #ff3333;
    color: white;
    padding: 10px;
    z-index: 100;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
  }

  .skip-to-content:focus {
    top: 10px;
  }

  /* Navigation Menu Styles */
  nav ul {
    display: flex;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  nav ul li {
    margin-right: 20px;
  }

  nav ul li a {
    text-decoration: none;
    color: #333;
    font-size: 16px;
    font-weight: bold;
  }

  nav ul li a:hover,
  nav ul li a:focus {
    color: #ff3333;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    nav ul {
      flex-direction: column;
      align-items: flex-start;
    }

    nav ul li {
      margin-bottom: 10px;
    }
  }
</style>
