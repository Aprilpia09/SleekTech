/* Footer Styles */
.site-footer {
  background-color: #222;
  color: white;
  padding: 40px 20px;
  text-align: center;
}

.footer-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
}

.footer-left img {
  max-height: 50px;
}

.footer-right ul {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
}

.footer-right ul li {
  margin-left: 30px;
}

.footer-right ul li a {
  color: white;
  text-decoration: none;
}

.footer-right ul li a:hover {
  color: #FFD700;
}
