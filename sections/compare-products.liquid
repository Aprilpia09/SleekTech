<section class="compare-products-section">
  <div class="compare-products-content">
    <h2>Compare Products</h2>
    <p>Select products to compare their features and make the best choice for you.</p>

    {% if compare_list.size > 0 %}
      <div class="compare-table">
        <table>
          <thead>
            <tr>
              <th>Feature</th>
              {% for product in compare_list %}
                <th>{{ product.title }}</th>
              {% endfor %}
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Price</td>
              {% for product in compare_list %}
                <td>{{ product.price | money }}</td>
              {% endfor %}
            </tr>
            <tr>
              <td>Availability</td>
              {% for product in compare_list %}
                <td>{{ product.available ? "In Stock" : "Out of Stock" }}</td>
              {% endfor %}
            </tr>
            <!-- Add more comparison rows as needed -->
          </tbody>
        </table>
      </div>
    {% else %}
      <p>Your comparison list is empty. Add products to start comparing!</p>
    {% endif %}
  </div>
</section>

<style>
  /* Compare Products Section */
  .compare-products-section {
    background-color: #ffffff; /* White background */
    padding: 40px 20px;
    font-family: Arial, sans-serif;
    color: #333;
  }

  .compare-products-content {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .compare-products-content h2 {
    font-size: 28px;
    font-weight: bold;
    color: #333;
  }

  .compare-products-content p {
    font-size: 16px;
    color: #666;
    margin-top: 10px;
  }

  .compare-table {
    margin-top: 30px;
    border-collapse: collapse;
    width: 100%;
  }

  .compare-table th,
  .compare-table td {
    padding: 15px;
    text-align: center;
    border: 1px solid #ddd;
  }

  .compare-table th {
    background-color: #f4f4f4;
    font-weight: bold;
    color: #333;
  }

  .compare-table td {
    background-color: #fafafa;
  }

  .compare-table tr:nth-child(even) td {
    background-color: #f9f9f9;
  }

  .compare-table tr:hover td {
    background-color: #f1f1f1;
  }

  .compare-table td {
    font-size: 16px;
    color: #333;
  }

  .compare-table td span {
    font-weight: bold;
  }

  /* Message for Empty Comparison List */
  .compare-products-content p {
    margin-top: 20px;
    color: #e74c3c;
    font-size: 18px;
    font-weight: bold;
  }

  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .compare-table th,
    .compare-table td {
      padding: 10px;
      font-size: 14px;
    }

    .compare-products-content h2 {
      font-size: 24px;
    }

    .compare-products-content p {
      font-size: 14px;
    }
  }
</style>
