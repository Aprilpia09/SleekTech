<!DOCTYPE html>
<html lang="{{ shop.locale }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, minimal-ui">
  <meta name="robots" content="noindex, nofollow">
  <title>{{ page_title }} - {{ shop.name }}</title>
  
  <!-- Shopify required content for header -->
  {{ content_for_header }}
  
  <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}" type="text/css" media="all">
  
  <!-- Additional head content can go here -->
</head>

<body>
  <!-- Shopify required content for layout -->
  {{ content_for_layout }}

  <!-- Announcement Bar Section -->
  {% section 'announcement-bar' %}

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-content">
      <h1>{{ settings.hero_title | default: 'Welcome to Our Store' }}</h1>
      <p>{{ settings.hero_subtitle | default: 'Explore our amazing products' }}</p>
      <a href="{{ settings.hero_button_link | default: '/collections/all' }}" class="cta-button">{{ settings.hero_button_text | default: 'Shop Now' }}</a>
    </div>

    <div class="hero-image">
      {% if settings.hero_image %}
        <img src="{{ settings.hero_image | img_url: 'original' }}" alt="Hero Image">
      {% else %}
        <img src="https://via.placeholder.com/1200x600" alt="Hero Image Placeholder">
      {% endif %}
    </div>
  </section>

  <!-- Review Section -->
  {% section 'reviews' %} <!-- Includes reviews.liquid section -->

  <!-- Featured Products Section -->
  {% section 'featured-products' %} <!-- Featured Products -->

  <!-- Blog Section -->
  {% section 'latest-blog-posts' %} <!-- Latest Blog Posts -->

  <!-- Newsletter Signup Section -->
  {% section 'newsletter-signup' %} <!-- Newsletter Signup -->

  <!-- Payment Options Section -->
  {% section 'payment-options' %} <!-- Payment Options -->

  <!-- Footer Section -->
  {% section 'footer' %}

  <script src="{{ 'theme.js' | asset_url }}" type="text/javascript"></script>
</body>
</html>
