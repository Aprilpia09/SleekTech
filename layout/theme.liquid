<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ page_title }}</title>
  <meta name="description" content="{{ shop.meta_description }}">

  <!-- Add necessary Shopify meta tags -->
  <meta name="shopify-digital-wallet" content="yes">
  <meta name="shopify-checkout-api-token" content="{{ checkout.token }}">

  <!-- CSS Links -->
  <link href="{{ 'theme.css' | asset_url }}" rel="stylesheet" type="text/css">

  <!-- Scripts -->
  <script src="{{ 'theme.js' | asset_url }}" defer="defer"></script>

  <!-- Other meta tags or custom scripts -->
  {{ content_for_header }} <!-- Include header content -->
</head>

<body>

  <!-- Include Header Section -->
  {% section 'header' %}

  <!-- Main Content -->
  <main id="content" class="site-content">
    {% section 'hero' %} <!-- Hero Section included here -->
    {% section 'featured-products' %}
    {% section 'latest-blog-posts' %}
    {% section 'cta-section' %}
    {% section 'reviews' %}
    {% section 'testimonials' %}
    {% section 'compare-products' %}
    {% section 'wishlist' %}
  </main>

  {{ content_for_layout }} <!-- Content for layout -->

  <!-- Include Footer Section -->
  {% section 'footer' %}

  <!-- Include Privacy Policy and other necessary links -->
  {% section 'privacy-policy' %}
  {% section 'shipping-returns' %}
  {% section 'faq' %}
  {% section 'contact-us' %}

  <!-- Other necessary sections such as login/register, cart, etc. -->
  {% section 'login-register' %}
  {% section 'cart' %}

  <!-- Additional Scripts or Footer Customizations -->
  {{ content_for_footer }}

</body>
</html>
