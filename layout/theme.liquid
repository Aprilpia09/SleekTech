<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ page_title }}</title>
  <meta name="description" content="{{ shop.meta_description }}">

  <!-- Shopify Meta tags -->
  <meta name="shopify-digital-wallet" content="yes">
  <meta name="shopify-checkout-api-token" content="{{ checkout.token }}">

  <!-- CSS Links -->
  <link href="{{ 'theme.css' | asset_url }}" rel="stylesheet" type="text/css">

  <!-- JavaScript -->
  <script src="{{ 'theme.js' | asset_url }}" defer="defer"></script>

  <!-- Include content for header -->
  {{ content_for_header }}
</head>

<body>

  <!-- Header Section -->
  {% section 'header' %}
  
  <!-- Main Content -->
  <main id="content" class="site-content">
    {% section 'home-section' %} <!-- Added the home-section here -->
    {% section 'featured-products' %}
    {% section 'latest-blog-posts' %}
    {% section 'cta-section' %}
    {% section 'reviews' %}
    {% section 'testimonials' %}
    {% section 'compare-products' %}
    {% section 'wishlist' %}
  </main>
  
  <!-- Footer Section -->
  {% section 'footer' %}
  
  <!-- Privacy Policy, Shipping/Returns, etc. -->
  {% section 'privacy-policy' %}
  {% section 'shipping-returns' %}
  {% section 'faq' %}
  {% section 'contact-us' %}
  
  <!-- Login/Register and Cart -->
  {% section 'login-register' %}
  {% section 'cart' %}
  
  <!-- Footer Customizations -->
  {{ content_for_footer }}
  
</body>
</html>
